@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="background-color:#333333;color:#999999;">
    <h1>Welcome To NutritionWorld</h1>
</div>

<div class="row">
    @foreach (var item in ViewBag.ModelList)
    {
        <div class="col-md-4" title="@item.Name">
            <h2>@item.Name</h2>
            <div class="photoDiv" style="background-image:url('@item.Photo_Path');"></div>
            <p>Address:<strong>@item.Address</strong></p>
            <a class="btn btn-default" href="/Home/Detail?id=@item.Id">View the details</a>
            <div style="height:20px;width:1px;"></div>
        </div>
    }
</div>

<style>
    .photoDiv {
        background-repeat:no-repeat;
        background-size:100% 100%;
        width:100%;height:200px;
        margin-bottom:10px;
        border-radius:6px;
    }
    .col-md-4:hover {
        box-shadow:0 0 2px 5px #ccc;
    }
</style>

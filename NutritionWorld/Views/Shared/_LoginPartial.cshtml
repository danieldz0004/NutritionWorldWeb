@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    var userModel = new NutritionWorld.DataLayer.DAl.AspNetUsers().GetModel(User.Identity.GetUserId(), User.Identity.GetUserName());
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello，" + userModel.FirstName + userModel.LastName + " !", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>
            @Html.ActionLink("My Reservation", "MyReservation", "Home", routeValues: null, htmlAttributes: new { title = "MyReservation" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">LogOut</a></li>
        <li>
            @Html.ActionLink("ManageReservation", "ManageReservation", "Home", routeValues: null, htmlAttributes: new { title = "ManageReservation" })
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
